
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Users Collection ---
    // Anyone can read public user profiles.
    // A user can only create or update their own profile.
    match /users/{userId} {
      allow read: if true;
      allow create, update: if request.auth != null && request.auth.uid == userId;
    }

    // --- Questions Collection ---
    // - Anyone can create (ask) a question.
    // - Anyone can read answered questions.
    // - Only the recipient can read their unanswered questions.
    // - Only the recipient can update (answer) or delete their questions.
    match /questions/{questionId} {
      allow read: if resource.data.isAnswered == true;
      allow create: if true;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.toUserId;
    }

    // --- Notes Subcollection ---
    // A user can only read/write/delete their own notes.
    match /users/{userId}/notes/{noteId} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection
    match /users/{userId} {
      // Anyone can read user profiles (for public profile pages)
      allow read: if true;
      
      // A user can create their own profile upon signup
      allow create: if request.auth.uid == userId;

      // A user can only update their own bio
      allow update: if request.auth.uid == userId && request.resource.data.keys().hasOnly(['bio']);
    }

    // Questions Collection
    match /questions/{questionId} {
      // Read rules:
      // 1. The recipient of the question can read it (for their dashboard)
      // 2. Anyone can read a question if it has been answered (for public profiles)
      allow read: if resource.data.toUserId == request.auth.uid || resource.data.isAnswered == true;

      // Anyone can create (ask) a question
      allow create: if true;

      // Update rules:
      // A user can only answer or edit an answer for a question they received
      allow update: if request.auth.uid == resource.data.toUserId;

      // Delete rules:
      // A user can only delete a question they received
      allow delete: if request.auth.uid == resource.data.toUserId;
    }
  }
}
